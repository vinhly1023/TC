<% provide(:title, "#{@silo.titleize.upcase} Upload MOAS") %>
<div class="col-xs-offset-3">
  <div class="content-header">
    <div class="header-inner">
      <h2><%= @silo.titleize.upcase %> Upload MOAS</h2>

      <p class="subheader">
        1. Make sure data is in the first sheet<br/>
        2. The Catalog and YMAL fields are optional
      </p>
    </div>
  </div>

  <%= form_tag({ action: 'upload_moas' }, method: 'post', multipart: true, class: 'form-horizontal') do %>
    <%= tc_radio_buttons_group :outpost, 'Outpost', @outposts, @selected_op %>
    <%= tc_radio_buttons_group :language, 'Language', ['English', 'French'], 'English' %>
    <%= tc_file_browser_group :moas_file, 'MOAS file', title: 'Required field' %>
    <%= tc_file_browser_group :catalog_file, 'Catalog file', title: 'Optional field' %>
    <%= tc_file_browser_group :ymal_file, 'YMAL file', title: 'Optional field' %>
    <%= tc_submit_tag 'Upload', class: 'btn btn-success' %>

    <div class="form-group">
      <%= raw @message %>
    </div>
  <% end %>
</div>
