<% provide(:title, 'PINs status') %>
<div class="glb-loader">
  <div></div>
</div>
<div class="col-xs-offset-3">
  <div class="content-header">
    <div class="header-inner">
      <h2>Fetch PIN Status</h2>
      <p class="subheader">This page allows you to fetch PIN status</p>
    </div>
  </div>
  <%= form_tag({ controller: 'pins', action: 'pin_status' }, remote: true, method: 'post', class: 'form-horizontal') do %>
    <%= tc_radio_buttons_group :env, 'Environment', ['QA', 'PROD'], nil, class: 'col-sm-9' %>
    <%= tc_text_area_group :lf_pin, 'PINs', '', '25x10' %>
    <%= tc_submit_tag 'Fetch Status', { id: 'fetch_status', class: 'btn btn-success js-validate-env-locale' } %>
  <% end %>
  <div class="controls pin-status">
    <div id="pins_status" class="col-sm-offset-2"></div>
  </div>
</div>
